{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <h1 class="my-5">Connectez-vous !</h1>

    {% if hasError %}

    <div class="alert alert-danger">L'adresse mail ou le mot de passe est invalide!</div>

    {% endif %}

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Adresse email" required value="{{ username }}" name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
        </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Connexion</button>
    </div>

    </form>
</div>
{% endblock %}